<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wtShow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">


    <LinearLayout
        android:id="@+id/linearLayout22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingStart="8dp"
        android:background="@drawable/edit_drawable"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/freshB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Whole Blood"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary"
                android:buttonTint="@color/primary"/>
            <LinearLayout
                android:id="@+id/sp1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgrp_bg3"
                android:layout_margin="4dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:backgroundTint="@color/gray"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/prpB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRP"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:buttonTint="@color/primary"/>
            <LinearLayout
                android:id="@+id/sp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgrp_bg3"
                android:visibility="gone"
             android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:backgroundTint="@color/gray"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/pcvB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PCV"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:buttonTint="@color/primary"/>
            <LinearLayout
                android:id="@+id/sp3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgrp_bg3"
                android:layout_gravity="center"
                android:layout_marginEnd="4dp"
                android:visibility="gone"
                android:backgroundTint="@color/gray"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-6dp"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/ffpB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FFP"
                android:layout_weight="1"
                android:textColor="@color/primary"
                android:buttonTint="@color/primary"/>
            <LinearLayout
                android:id="@+id/sp4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgrp_bg3"
                android:layout_marginEnd="4dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:backgroundTint="@color/gray"
                >
                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:background="@drawable/bgrp_bg3"
        android:fontFamily="@font/nunitosans_black"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="Blood Constituents"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>