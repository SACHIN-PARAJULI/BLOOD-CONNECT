<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:id="@+id/showVol"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <TextView
                android:id="@+id/vname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Volunteer"
                android:textColor="@color/green1"
                app:layout_constraintEnd_toEndOf="@+id/vPic"
                app:layout_constraintStart_toStartOf="@+id/vPic"
                app:layout_constraintTop_toBottomOf="@+id/vPic" />

            <ImageView
                android:id="@+id/volcall"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/call" />

            <TextView
                android:id="@+id/volPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="phone"
                android:textColor="@color/Green"
                app:layout_constraintStart_toEndOf="@+id/vPic"
                app:layout_constraintTop_toBottomOf="@+id/volName" />

            <TextView
                android:id="@+id/volName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Name"
                android:textColor="@color/primary"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/vPic"
                app:layout_constraintTop_toTopOf="@+id/vPic" />

            <TextView
                android:id="@+id/volAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Address"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/vPic"
                app:layout_constraintTop_toBottomOf="@+id/volPhone" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/vPic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               android:src="@drawable/user1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>