<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgrp_bg8"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingBottom="32dp"
        android:paddingEnd="32dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:elevation="4dp"
            android:src="@drawable/user1"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/donorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="24sp"
        android:gravity="center"
            android:textStyle="bold"
            android:text="Shyam Kishor Pandit"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/donorAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:drawableLeft="@drawable/location"
            android:drawableRight="@drawable/refresh"
            android:drawablePadding="8dp"
            android:layout_marginTop="12dp"
            android:drawableTint="@color/white"
            android:text="Dharan, Sunsari"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/donatedDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/date"
            android:layout_marginTop="4dp"
            android:drawablePadding="8dp"
            android:drawableTint="@color/white"
            android:text="9807685336"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/donorPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawablePadding="8dp"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/calle"
            android:drawableTint="@color/white"
            android:text="9807685336"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="-60dp"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/slider_background"
            android:elevation="6dp"
            android:layout_weight="0.8"
            android:layout_margin="12dp"
            android:orientation="horizontal"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">


            <TextView
                android:id="@+id/donorBG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:text="B+" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="10sp"
                android:text="Blood Group" />
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/donatedTimes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="1" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Donated times" />
            </LinearLayout>
            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                android:layout_weight="1">


                <TextView
                    android:id="@+id/donorStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:text="Active" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="Status" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>